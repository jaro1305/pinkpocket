                    android:src="@drawable/greenlevel" />
                
                <ImageView android:id="@+id/level3b"
                    android:layout_width="17dp"
                    android:layout_height="27dp"
                    android:src="@drawable/greenlevel" />
                
                <ImageView android:id="@+id/level4b"
                    android:layout_width="17dp"
                    android:layout_height="27dp"
                    android:src="@drawable/greenlevel" />
                
                <ImageView android:id="@+id/level5b"
                    android:layout_width="17dp"
